# Production Environment Configuration for Stinkster
# This file contains all environment variables for production deployment

# Node.js Environment
NODE_ENV=production

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=/var/log/stinkster
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_CONSOLE=false

# Service Ports
SPECTRUM_PORT=8092
WIGLE_TO_TAK_PORT=8000
KISMET_OPERATIONS_PORT=8003
GPS_BRIDGE_PORT=2947
HEALTH_CHECK_PORT=9000

# Spectrum Analyzer (HackRF) Configuration
OPENWEBRX_URL=http://localhost:8073
OPENWEBRX_WS_URL=ws://localhost:8073/ws/
OPENWEBRX_HEALTH_INTERVAL=30000
OPENWEBRX_TIMEOUT=10000
OPENWEBRX_RECONNECT_ATTEMPTS=3
OPENWEBRX_RECONNECT_DELAY=5000

# FFT Processing
FFT_BUFFER_SIZE=10
FFT_MAX_POINTS=500
FFT_UPDATE_INTERVAL=100

# Signal Processing
NOISE_FLOOR=-80
PEAK_THRESHOLD=-50
BANDWIDTH_ESTIMATION=auto

# WebSocket Configuration
SPECTRUM_CORS_ORIGIN=*
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=5000

# WigleToTAK Configuration
WIGLE_DATA_DIR=/home/pi/kismet_ops
FILE_WATCH_INTERVAL=1000
MAX_FILE_SIZE=104857600
PROCESSED_CACHE_SIZE=10000

# TAK Server Configuration
TAK_SERVER_IP=0.0.0.0
TAK_SERVER_PORT=6969
TAK_MULTICAST_GROUP=239.2.3.1
TAK_MULTICAST_PORT=6969
TAK_MULTICAST_TTL=1
TAK_STALE_HOURS=24
TAK_DEFAULT_COLOR=-65281

# Filtering Configuration
ENABLE_WHITELIST=false
ENABLE_BLACKLIST=false
MAX_LIST_SIZE=1000

# Antenna Configuration
ANTENNA_SENSITIVITY=standard
CUSTOM_ANTENNA_FACTOR=1.0

# GPS Bridge Configuration
MAVLINK_CONNECTION=tcp:localhost:14550
MAVLINK_TIMEOUT=10000
MAVLINK_HEARTBEAT=1000
MAVLINK_RECONNECT_ATTEMPTS=5
MAVLINK_RECONNECT_DELAY=5000

# GPSD Configuration
GPSD_PROTOCOL_VERSION=3.11
GPSD_RELEASE_VERSION=3.17
GPSD_DEVICE_PATH=mavlink
GPSD_DRIVER=MAVLink

# Positioning Configuration
COORD_PRECISION=7
ALT_PRECISION=3
SPEED_PRECISION=2
BEARING_PRECISION=2

# Security Configuration
ENABLE_HELMET=true
ENABLE_CORS=true
ENABLE_COMPRESSION=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Performance Configuration
ENABLE_CLUSTERING=false
MEMORY_LIMIT_MB=512
CPU_THRESHOLD=80.0
MONITOR_INTERVAL=30000

# Frontend API URLs (for Svelte apps)
VITE_API_URL_HACKRF=http://localhost:8092
VITE_API_URL_WIGLE=http://localhost:8000
VITE_API_URL_KISMET=http://localhost:8003
VITE_WS_URL_HACKRF=ws://localhost:8092
VITE_WS_URL_WIGLE=ws://localhost:8000/ws
VITE_WS_URL_KISMET=ws://localhost:8003