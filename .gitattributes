# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.less text eol=lf
*.html text eol=lf
*.htm text eol=lf
*.xml text eol=lf
*.svg text eol=lf
*.svelte text eol=lf
*.vue text eol=lf
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pdf binary
*.doc binary
*.docx binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore

# Enable syntax highlighting for Svelte files on GitHub
*.svelte linguist-language=Svelte

# Hide development and configuration files from GitHub repository view
# This makes README.md the primary focus when visitors view the repo
.dockerignore linguist-generated=true
.editorconfig linguist-generated=true
.env.example linguist-generated=true
.lintstagedrc.json linguist-generated=true
.prettierignore linguist-generated=true
.prettierrc linguist-generated=true
Dockerfile linguist-generated=true
app.d.ts linguist-generated=true
builder.config.json linguist-generated=true
docker-compose.yml linguist-generated=true
install.sh linguist-generated=true
package-lock.json linguist-generated=true
package.json linguist-vendored=true
quick-install.sh linguist-generated=true
svelte.config.js linguist-generated=true
tailwind.config.js linguist-generated=true
tsconfig.json linguist-generated=true
vite.config.ts linguist-generated=true

# Ensure README.md is prominently featured
README.md linguist-documentation=false

