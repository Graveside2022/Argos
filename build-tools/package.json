{
	"name": "argos",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"validate:env": "node src/lib/server/validate-env.js",
		"dev": "npm run validate:env && NODE_OPTIONS='--max-old-space-size=1024' npx vite dev --port 5173 --host 0.0.0.0",
		"dev:simple": "npm run validate:env && NODE_OPTIONS='--max-old-space-size=1024' npx vite dev --port 5173 --host 0.0.0.0",
		"dev:auto-kismet": "npm run validate:env && ./scripts/dev/auto-start-kismet.sh && NODE_OPTIONS='--max-old-space-size=1024' npx vite dev --port 5173 --host 0.0.0.0",
		"dev:clean": "npm run kill-dev && npm run dev",
		"dev:full": "./scripts/dev/start-all-services.sh",
		"kismet:start": "./scripts/start-kismet-with-alfa.sh",
		"kill-dev": "lsof -ti:5173 | xargs kill -9 2>/dev/null || true",
		"kill-all": "pkill -f 'npm.*run.*dev' 2>/dev/null || true; pkill -f 'python.*app.py' 2>/dev/null || true; pkill -f 'npm.*start.*3000' 2>/dev/null || true",
		"build": "npm run validate:env && vite build",
		"preview": "npm run validate:env && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint . --config config/eslint.config.js",
		"lint:fix": "eslint . --config config/eslint.config.js --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"prepare": "husky install",
		"framework:check-css": "node ./scripts/css-integrity-check.cjs",
		"framework:check-html": "node ./scripts/html-structure-validator.cjs",
		"framework:check-visual": "node ./scripts/visual-regression-check.cjs",
		"framework:generate-baselines": "node ./scripts/css-integrity-check.cjs --generate-baselines && node ./scripts/html-structure-validator.cjs --generate-baselines",
		"framework:generate-visual-baselines": "node ./scripts/visual-regression-check.cjs --generate-baseline",
		"framework:validate-all": "npm run framework:check-css && npm run framework:check-html",
		"framework:full-check": "npm run framework:validate-all && npm run framework:check-visual",
		"framework:install": "bash ./scripts/install-framework.sh",
		"test": "vitest",
		"test:unit": "vitest run tests/unit",
		"test:integration": "vitest run tests/integration",
		"test:security": "vitest run tests/security",
		"test:visual": "vitest run tests/visual",
		"test:performance": "vitest run tests/performance",
		"db:migrate": "tsx src/lib/database/runMigrations.ts",
		"db:rollback": "tsx src/lib/database/rollbackMigration.ts",
		"test:e2e": "playwright test",
		"test:smoke": "playwright test tests/e2e/smoke.test.ts",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:visual:generate": "vitest run tests/visual -- --generate-baselines",
		"test:all": "npm run test:unit && npm run test:integration && npm run test:visual && npm run test:performance",
		"mcp:start": "tsx src/lib/server/mcp/dynamic-server.ts",
		"mcp:hackrf": "tsx src/lib/server/mcp/servers/hackrf-server.ts",
		"mcp:kismet": "tsx src/lib/server/mcp/servers/kismet-server.ts",
		"mcp:gps": "tsx src/lib/server/mcp/servers/gps-server.ts",
		"mcp:gsm-evil": "tsx src/lib/server/mcp/servers/gsm-evil-server.ts",
		"mcp:system": "tsx src/lib/server/mcp/servers/system-server.ts",
		"mcp:install-b": "tsx scripts/mcp-install.ts b",
		"mcp:install-c": "tsx scripts/mcp-install.ts c",
		"mcp:config-b": "tsx scripts/mcp-config.ts b",
		"mcp:config-c": "tsx scripts/mcp-config.ts c"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@playwright/test": "^1.53.2",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.3",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.8",
		"@types/better-sqlite3": "^7.6.13",
		"@types/cors": "^2.8.19",
		"@types/cytoscape": "^3.31.0",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^5.0.3",
		"@types/leaflet": "^1.9.21",
		"@types/leaflet.markercluster": "^1.5.6",
		"@types/node": "^24.0.12",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.36.0",
		"@typescript-eslint/parser": "^8.36.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"autoprefixer": "^10.4.24",
		"better-sqlite3": "^12.2.0",
		"css-tree": "^3.1.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"fast-check": "^4.5.3",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"node-pty": "^1.1.0",
		"pixelmatch": "^7.1.0",
		"pngjs": "^7.0.0",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"puppeteer": "^24.12.1",
		"svelte": "^5.35.5",
		"svelte-check": "^4.2.2",
		"svelte-eslint-parser": "^1.2.0",
		"tailwindcss": "^3.4.15",
		"tslib": "^2.8.1",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"vite": "^7.0.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@ag-ui/client": "^0.0.44",
		"@ag-ui/core": "^0.0.44",
		"@ag-ui/mcp-apps-middleware": "^0.0.3",
		"@deck.gl/core": "^9.1.12",
		"@deck.gl/layers": "^9.1.12",
		"@modelcontextprotocol/sdk": "^1.26.0",
		"@tailwindcss/forms": "^0.5.10",
		"@xterm/addon-fit": "^0.11.0",
		"@xterm/addon-web-links": "^0.12.0",
		"@xterm/xterm": "^6.0.0",
		"cytoscape": "^3.32.0",
		"cytoscape-cola": "^2.5.1",
		"cytoscape-dagre": "^2.5.0",
		"deck.gl": "^9.1.12",
		"dotenv": "^17.2.1",
		"eventsource": "^4.0.0",
		"eventsource-parser": "^3.0.6",
		"leaflet": "^1.9.4",
		"leaflet.heat": "^0.2.0",
		"leaflet.markercluster": "^1.5.3",
		"maplibre-gl": "^5.6.1",
		"mgrs": "^2.1.0",
		"node-fetch": "^3.3.2",
		"svelte-maplibre-gl": "^1.0.3",
		"ts-interface-checker": "^1.0.2",
		"ws": "^8.18.3",
		"zod": "^3.25.76"
	},
	"overrides": {
		"cookie": ">=0.7.0",
		"fast-xml-parser": ">=5.3.4"
	}
}
