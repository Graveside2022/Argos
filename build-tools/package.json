{
	"name": "argos",
	"version": "0.0.1",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "npm run kill-dev && CI=true NODE_OPTIONS='--max-old-space-size=1024' npx vite dev --port 5173 --host 0.0.0.0 --strictPort",
		"dev:simple": "CI=true NODE_OPTIONS='--max-old-space-size=1024' npx vite dev --port 5173 --host 0.0.0.0 --strictPort",
		"dev:tmux": "tmux kill-session -t argos-dev 2>/dev/null; tmux new-session -d -s argos-dev 'cd /home/kali/Documents/Argos/Argos && CI=true NODE_OPTIONS=--max-old-space-size=1024 npx vite dev --port 5173 --host 0.0.0.0 --strictPort' && echo 'Argos dev server running in tmux session argos-dev'",
		"dev:auto-kismet": "./scripts/dev/auto-start-kismet.sh && npm run dev",
		"dev:clean": "npm run kill-dev && npm run dev",
		"dev:full": "./scripts/dev/start-all-services.sh",
		"kismet:start": "./scripts/dev/start-kismet-with-alfa.sh",
		"kill-dev": "lsof -ti:5173 -ti:3001 | xargs -r kill 2>/dev/null; sleep 1; lsof -ti:5173 -ti:3001 | xargs -r kill -9 2>/dev/null || true",
		"kill-all": "pkill -f 'npm.*run.*dev' 2>/dev/null || true; pkill -f 'python.*app.py' 2>/dev/null || true; pkill -f 'npm.*start.*3000' 2>/dev/null || true",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "eslint . --config config/eslint.config.js",
		"lint:fix": "eslint . --config config/eslint.config.js --fix",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"postinstall": "node -e \"try{require('node-pty')}catch{process.exit(1)}\" 2>/dev/null || npx node-gyp rebuild --directory=node_modules/node-pty 2>/dev/null || true",
		"prepare": "husky install",
		"framework:check-css": "node ./scripts/build/css-integrity-check.cjs",
		"framework:check-html": "node ./scripts/build/html-structure-validator.cjs",
		"framework:check-visual": "node ./scripts/build/visual-regression-check.cjs",
		"framework:generate-baselines": "node ./scripts/build/css-integrity-check.cjs --generate-baselines && node ./scripts/build/html-structure-validator.cjs --generate-baselines",
		"framework:generate-visual-baselines": "node ./scripts/build/visual-regression-check.cjs --generate-baseline",
		"framework:validate-all": "npm run framework:check-css && npm run framework:check-html",
		"framework:full-check": "npm run framework:validate-all && npm run framework:check-visual",
		"framework:install": "bash ./scripts/build/install-framework.sh",
		"test": "vitest",
		"test:unit": "vitest run tests/unit",
		"test:integration": "vitest run tests/integration",
		"test:security": "vitest run tests/security",
		"test:visual": "vitest run tests/visual",
		"test:performance": "vitest run tests/performance",
		"db:migrate": "tsx src/lib/database/runMigrations.ts",
		"db:rollback": "tsx src/lib/database/rollbackMigration.ts",
		"test:e2e": "playwright test",
		"test:smoke": "playwright test tests/e2e/smoke.test.ts",
		"test:watch": "vitest watch",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"test:visual:generate": "vitest run tests/visual -- --generate-baselines",
		"test:all": "npm run test:unit && npm run test:integration && npm run test:visual && npm run test:performance",
		"mcp:start": "tsx src/lib/server/mcp/dynamic-server.ts",
		"mcp:hardware": "tsx src/lib/server/mcp/servers/hardware-debugger.ts",
		"mcp:gsm-evil": "tsx src/lib/server/mcp/servers/gsm-evil-server.ts",
		"mcp:system": "tsx src/lib/server/mcp/servers/system-inspector.ts",
		"mcp:streaming": "tsx src/lib/server/mcp/servers/streaming-inspector.ts",
		"mcp:database": "tsx src/lib/server/mcp/servers/database-inspector.ts",
		"mcp:api": "tsx src/lib/server/mcp/servers/api-debugger.ts",
		"mcp:test": "tsx src/lib/server/mcp/servers/test-runner.ts",
		"mcp:install-b": "tsx scripts/ops/mcp-install.ts b",
		"mcp:config-b": "tsx scripts/ops/mcp-config.ts b"
	},
	"devDependencies": {
		"@axe-core/playwright": "^4.11.1",
		"@eslint/js": "^9.39.2",
		"@lucide/svelte": "^0.561.0",
		"@playwright/test": "^1.53.2",
		"@sveltejs/adapter-auto": "^6.0.1",
		"@sveltejs/kit": "^2.22.3",
		"@sveltejs/vite-plugin-svelte": "^6.0.0",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@testing-library/jest-dom": "^6.6.3",
		"@types/better-sqlite3": "^7.6.13",
		"@types/cors": "^2.8.19",
		"@types/cytoscape": "^3.31.0",
		"@types/dotenv": "^6.1.1",
		"@types/express": "^5.0.3",
		"@types/leaflet": "^1.9.21",
		"@types/leaflet.markercluster": "^1.5.6",
		"@types/node": "^24.0.12",
		"@types/ws": "^8.18.1",
		"@typescript-eslint/eslint-plugin": "^8.36.0",
		"@typescript-eslint/parser": "^8.36.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"better-sqlite3": "^12.2.0",
		"css-tree": "^3.1.0",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"eslint-plugin-svelte": "^3.10.1",
		"fast-check": "^4.5.3",
		"globals": "^16.5.0",
		"husky": "^9.1.7",
		"jscpd": "^4.0.8",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"madge": "^8.0.0",
		"node-pty": "^1.1.0",
		"pixelmatch": "^7.1.0",
		"pngjs": "^7.0.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"puppeteer": "^24.12.1",
		"shadcn": "^3.8.4",
		"svelte": "^5.35.5",
		"svelte-check": "^4.2.2",
		"svelte-eslint-parser": "^1.2.0",
		"tailwindcss": "^4.1.18",
		"tslib": "^2.8.1",
		"tsx": "^4.20.3",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.8.3",
		"vite": "^7.0.3",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@internationalized/date": "^3.11.0",
		"@modelcontextprotocol/sdk": "1.26.0",
		"@tailwindcss/forms": "0.5.10",
		"@xterm/addon-fit": "0.11.0",
		"@xterm/addon-web-links": "0.12.0",
		"@xterm/xterm": "6.0.0",
		"bits-ui": "^2.15.5",
		"clsx": "^2.1.1",
		"dotenv": "17.2.1",
		"eventsource": "4.0.0",
		"leaflet": "1.9.4",
		"maplibre-gl": "5.6.1",
		"mgrs": "2.1.0",
		"mode-watcher": "^1.1.0",
		"svelte-maplibre-gl": "1.0.3",
		"svelte-sonner": "^1.0.7",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"ws": "8.18.3",
		"zod": "3.25.76"
	},
	"overrides": {
		"cookie": ">=0.7.0",
		"fast-xml-parser": ">=5.3.4"
	}
}
