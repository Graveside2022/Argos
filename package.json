		"@xterm/xterm": "6.0.0",
		"bits-ui": "2.15.5",
		"clsx": "2.1.1",
		"dotenv": "17.2.1",
		"eventsource": "4.0.0",
		"leaflet": "1.9.4",
		"maplibre-gl": "5.6.1",
		"mgrs": "2.1.0",
		"mode-watcher": "1.1.0",
		"svelte-maplibre-gl": "1.0.3",
		"svelte-sonner": "1.0.7",
		"tailwind-merge": "3.4.0",
		"tailwind-variants": "3.2.2",
		"ws": "8.18.3",
		"zod": "3.25.76"
	},
	"overrides": {
