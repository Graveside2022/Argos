		"better-sqlite3": "12.2.0",
		"css-tree": "3.1.0",
		"eslint": "9.30.1",
		"eslint-config-prettier": "10.1.5",
		"eslint-plugin-simple-import-sort": "12.1.1",
		"eslint-plugin-sonarjs": "^4.0.0",
		"eslint-plugin-svelte": "3.10.1",
		"fast-check": "4.5.3",
		"globals": "16.5.0",
		"husky": "9.1.7",
		"jscpd": "4.0.8",
		"jsdom": "26.1.0",
		"lint-staged": "16.1.2",
		"madge": "8.0.0",
		"node-pty": "1.1.0",
		"pixelmatch": "7.1.0",
		"pngjs": "7.0.0",
		"prettier": "3.6.2",
		"prettier-plugin-svelte": "3.4.0",
		"puppeteer": "24.12.1",
		"shadcn": "3.8.4",
		"svelte": "5.35.5",
		"svelte-check": "4.2.2",
		"svelte-eslint-parser": "1.2.0",
		"tailwindcss": "4.1.18",
		"tslib": "2.8.1",
		"tsx": "4.20.3",
		"tw-animate-css": "1.4.0",
		"typescript": "5.8.3",
		"vite": "7.0.3",
		"vitest": "3.2.4"
	},
	"dependencies": {
		"@armyc2.c5isr.renderer/mil-sym-ts-web": "2.6.7",
		"@internationalized/date": "3.11.0",
		"@modelcontextprotocol/sdk": "1.26.0",
		"@tailwindcss/forms": "0.5.10",
		"@tak-ps/node-cot": "14.23.2",
		"@tak-ps/node-tak": "12.0.0",
		"@xmldom/xmldom": "0.8.11",
