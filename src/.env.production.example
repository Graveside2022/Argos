# Production Environment Configuration
# Copy this file to .env.production and update with your values

# Security Settings
APP_SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
ENABLE_CORS=false
CORS_ORIGINS=https://your-domain.com
SECURE_COOKIES=true
SESSION_TIMEOUT=3600

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/stinkster/app.log
AUDIT_LOG_FILE=/var/log/stinkster/audit.log

# Error Tracking (GlitchTip - Open Source Sentry Alternative)
GLITCHTIP_DSN=https://your-key@your-glitchtip-instance.com/1
GLITCHTIP_ENVIRONMENT=production
GLITCHTIP_RELEASE=1.0.0

# Monitoring (Prometheus)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PREFIX=stinkster

# Database (if needed)
DB_ENCRYPTION_KEY=your-encryption-key-here

# TAK Server Settings
TAK_SERVER_IP=0.0.0.0
TAK_SERVER_PORT=6969
TAK_MULTICAST_ENABLED=true

# GPS Settings
GPS_PORT=/dev/ttyUSB0
GPS_BAUDRATE=4800

# Kismet Settings
KISMET_CONFIG_DIR=/home/pi/kismet_ops
KISMET_LOG_DIR=/home/pi/tmp

# HackRF Settings
HACKRF_SAMPLE_RATE=2400000
HACKRF_GAIN_VGA=35
HACKRF_GAIN_LNA=40

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/stinkster

# Flask Settings
FLASK_ENV=production
FLASK_PORT=8000

# Node.js Settings
NODE_ENV=production
NODE_PORT=3000