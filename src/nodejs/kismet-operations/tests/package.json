{
  "name": "kismet-operations-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Kismet Operations",
  "main": "run-all-tests.js",
  "scripts": {
    "test": "node run-all-tests.js",
    "test:unit": "jest --testMatch '**/unit/**/*.test.js'",
    "test:component": "jest --testMatch '**/component/**/*.test.js'",
    "test:integration": "jest --testMatch '**/integration/**/*.test.js'",
    "test:performance": "node performance/kismet-load.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "../lib/**/*.js",
      "../index.js",
      "../server.js",
      "!../node_modules/**",
      "!../tests/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/setup.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/../$1"
    },
    "testTimeout": 30000,
    "verbose": true
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jsdom": "^22.1.0",
    "@jest/globals": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}