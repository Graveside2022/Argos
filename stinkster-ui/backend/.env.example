# WigleToTAK Backend Configuration

# Server Configuration
NODE_ENV=development
PORT=8001
HOST=0.0.0.0
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=*

# API Security
API_KEY_REQUIRED=false
API_KEY=your-secret-api-key

# TAK Server Configuration
TAK_SERVER_HOST=239.2.3.1
TAK_SERVER_PORT=6969
TAK_MULTICAST=true
TAK_MULTICAST_GROUP=239.2.3.1
TAK_PROTOCOL=UDP
TAK_AUTO_CONNECT=false

# Antenna Configuration
ANTENNA_HEIGHT=2
ANTENNA_GAIN=2.15

# Scan Configuration
SCAN_INTERVAL=30
SIGNAL_THRESHOLD=-95
MAX_AGE=300

# TAK Identity
CALLSIGN=WIGLE-TAK
TEAM=Blue
ROLE=Team Member

# Database (future use)
# DB_TYPE=sqlite
# DB_PATH=./data/wigle.db

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100MB

# WebSocket Configuration
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000

# Performance
MAX_DEVICES_IN_MEMORY=10000
HISTORY_RETENTION_HOURS=24